{
  "name": "@localful/server",
  "version": "0.1.0",
  "description": "A generic backend for local-first applications including content backup, cross-device sync and multi-user support.",
  "author": "Ben-Ryder <dev@benryder.me> (https://www.benryder.me)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest '.*.unit.test.ts' --passWithNoTests",
    "test:e2e": "jest '.*.e2e.test.ts' --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "db:init": "psql postgres -f ./scripts/setup.sql && npm run db:init:test-data",
    "db:dump": "pg_dump localful > ./backup/localful.sql",
    "db:restore": "psql localful < ./backup/localful.sql",
    "db:init:test-data": "ts-node tests/utils/database-init-cli.ts"
  },
  "dependencies": {
    "@localful/common": "../common",
    "@nestjs/common": "^10.2.9",
    "@nestjs/core": "^10.2.9",
    "@nestjs/platform-express": "^10.2.9",
    "@nestjs/platform-socket.io": "^10.2.9",
    "@nestjs/websockets": "^10.2.9",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "ioredis": "^5.3.2",
    "jose": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^9.3.0",
    "ms": "^3.0.0-canary.1",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@localful/testing": "../testing",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.9",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.9.1",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.6",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE.txt"
  ],
  "jest": {
    "testTimeout": 10000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "18"
  }
}
