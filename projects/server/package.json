{
  "name": "@localful/server",
  "version": "0.1.0",
  "description": "A generic backend for local-first applications including content backup, cross-device sync and multi-user support.",
  "author": "Ben-Ryder <dev@benryder.me> (https://www.benryder.me)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest '.*.unit.test.ts' --passWithNoTests",
    "test:e2e": "jest '.*.e2e.test.ts' --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@localful/common": "../common",
    "@nestjs/common": "^9.1.4",
    "@nestjs/core": "^9.1.4",
    "@nestjs/platform-express": "^9.1.4",
    "@nestjs/platform-socket.io": "^9.1.4",
    "@nestjs/websockets": "^9.1.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.0.3",
    "form-data": "^4.0.0",
    "ioredis": "^5.3.2",
    "jose": "^4.13.1",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^9.3.0",
    "ms": "^3.0.0-canary.1",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.1",
    "validator": "^13.7.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@localful/testing": "../testing",
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "jest": "^27.2.5",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE.txt"
  ],
  "jest": {
    "testTimeout": 10000,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "18"
  }
}
