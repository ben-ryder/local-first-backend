{
  "name": "localful",
  "version": "0.1.0",
  "description": "A generic backend for local-first applications including content backup, cross-device sync and multi-user support.",
  "main": "index.js",
  "private": true,
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prepare": "husky install",
    "install": "concurrently 'npm:install:*'",
    "install:server": "cd ./projects/server && npm i",
    "install:common": "cd ./projects/common && npm i",
    "install:local": "cd projects/local && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ben-Ryder/localful.git"
  },
  "author": "Ben-Ryder",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/Ben-Ryder/localful/issues"
  },
  "homepage": "https://github.com/Ben-Ryder/localful#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": "18"
  }
}
